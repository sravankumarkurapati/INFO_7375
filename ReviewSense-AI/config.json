{
  "project_name": "ReviewSense-AI",
  "assignment": "LLM Fine-Tuning Assignment",
  "student": "Sravan Kumar Kurapati",
  "university": "Northeastern University",
  "base_model": "TinyLlama/TinyLlama-1.1B-Chat-v1.0",
  "model_max_length": 2048,
  "use_4bit": false,
  "use_8bit": false,
  "lora_r": 8,
  "lora_alpha": 16,
  "lora_dropout": 0.05,
  "lora_bias": "none",
  "lora_task_type": "CAUSAL_LM",
  "lora_target_modules": [
    "q_proj",
    "k_proj",
    "v_proj",
    "o_proj",
    "gate_proj",
    "up_proj",
    "down_proj"
  ],
  "num_epochs": 3,
  "batch_size": 2,
  "gradient_accumulation_steps": 4,
  "learning_rate": 0.0002,
  "weight_decay": 0.01,
  "warmup_ratio": 0.03,
  "max_grad_norm": 0.3,
  "optimizer": "adamw_torch",
  "lr_scheduler": "cosine",
  "fp16": false,
  "bf16": false,
  "logging_steps": 10,
  "eval_steps": 50,
  "save_steps": 100,
  "save_total_limit": 2,
  "eval_strategy": "steps",
  "load_best_model_at_end": true,
  "metric_for_best_model": "eval_loss",
  "greater_is_better": false,
  "train_split": 0.7,
  "val_split": 0.15,
  "test_split": 0.15,
  "max_train_samples": 5000,
  "max_val_samples": 500,
  "max_test_samples": 500,
  "data_dir": "./data",
  "output_dir": "./models/checkpoints",
  "final_model_dir": "./models/final",
  "log_dir": "./outputs/logs",
  "results_dir": "./outputs/results",
  "figures_dir": "./outputs/figures",
  "seed": 42,
  "report_to": "none"
}
